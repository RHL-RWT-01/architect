{
    "name": "architectura",
    "displayName": "Architectura",
    "description": "Generate architecture diagrams from your code automatically.",
    "repository": {
        "type": "git",
        "url": "https://github.com/RHL-RWT-01/architect"
    },
    "publisher": "rahulrawat01",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.85.0"
    },
    "icon": "resources/icon.png",
    "categories": [
        "Visualization",
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "architecture",
        "diagram",
        "system design",
        "mermaid",
        "dependency graph"
    ],
    "activationEvents": [
        "onWebviewView:architectura.view",
        "onCommand:architect.generateDiagram"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "architect.generateDiagram",
                "title": "Architect: Generate Diagram"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "architectura-column",
                    "title": "Architectura",
                    "icon": "resources/icon.png"
                }
            ]
        },
        "views": {
            "architectura-column": [
                {
                    "id": "architectura.view",
                    "name": "Architecture Preview",
                    "type": "webview"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "18.x",
        "typescript": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0"
    }
}